---
import Layout from '../layouts/shop.astro';
import ShopItems from '../components/shop-items.astro';
import { Cart } from '../components/cart';

export const prerender = true;
---

<Layout>
	<h1>Shop Sandwich Kits</h1>
	<noscript>
			<p>JavaScript is required to view this content.</p>
	</noscript>
	<div class="wrapper">
		<ShopItems />
		<Cart client:only="solid-js" />
	</div>
</Layout>

<style>
	.wrapper {
		align-items: flex-start;
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr 260px;
		position: relative;
	}
</style>
